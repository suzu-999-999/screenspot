<!DOCTYPE html>
<html>
  <section id="second-block">
    <head>
      <title>Screenspot</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/3e8b362a6f.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <h1>ScreenSpot</h1>
      <div class="header-list">
      <ul>
        <li><%= link_to tweets_path do %>
          <i class="fa fa-home"></i>
        <% end %></li>
        <li><%= link_to new_tweet_path do %>
          <i class="fa-solid fa-pen"></i>
        <% end %></li>
        <li><%= link_to destroy_user_session_path, method: :delete, class: "logout-link" do %>
          <i class="fas fa-sign-out-alt"></i>
        <% end %></li>
      </ul>
      </div>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer>
      <p>Copyright Â© GeekSalon All Rights Reserved.</p>
  </body>
  </html>
  </section>